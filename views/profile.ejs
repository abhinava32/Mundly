<h1>Welcome</h1>
<% if(user.id == profile_user.id) { %> 
    <img src="<%= user.avatar %>" alt="profile picture" width="100">
    <form action="/users/profile/update/<%=user.id%> " enctype="multipart/form-data" method="post">
        <input type="text" value="<%=profile_user.name%>" name="name" required>
        
        <input type="text" value="<%=profile_user.email%>" name="email" required>  
        <input type="file" name="avatar" placeholder="profile picture" value="profile picture">
        <button type="submit">Update</button>      
    </form>
<%} else {%>
    <h3> <%= profile_user.name %></h3>
    <h4><%= profile_user.email %></h4> 
<% } %> 