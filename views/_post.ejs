
<li id="post-<%= post._id%>" class="shadow posts"> 
    <img src="<%= post.user.avatar %>" alt="" style="float: left;">
    <p>
        <p>
            <%= post.content %>  
        </p>
        <small>
            --<%= post.user.name %>
        </small>
        <% if(locals.user && (locals.user.id == post.user.id)) { %>
            <small>
                <a class="delete-post-button" href="/posts/destroy/<%= post._id %>">X</a>
            </small>
        <% } %>

        <% if(locals.user) { %> 
            <small><a href="/likes/toggle/?type=Post&id=<%= post._id %>"><%= post.likes.length %> <i class="bi bi-star"></i></a></small>    
        <% } %>
        
    </p>

    <div class="post-comments">
        <% if(locals.user) { %>
            <form action="/comments/create" method="POST" id="new-comment-form">
                <input type="text" name="content" placeholder="add comment...">
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="submit" value="Add Comment">
            </form> 
        <% } %>
    </div>
    <div id="show-comments" class="post-comments-list">
        <ul>
            <% for (comment of post.comments) { %> 
                <%- include('_comments') -%>
            <% } %>
        </ul>
    </div>
</li>

    