<header class="container-fluid">
    <h1><a href="/" id="logo" class="header-element">Face Look</a></h1>
    <ul id="user-details" class="header-element">
        <% if (locals.user) { %>
            <li><img src="<%= user.avatar %>" alt="Image"></li>
            <li><a href="/users/profile/<%=user._id%>" class="fs-5"> <%= locals.user.name %></a></li>
            <li><a href="/users/sign-out" class="fs-5"> Sign Out </a></li>  
        <% } else { %>
            <li><a href="/users/sign-in"> Sign In </a></li>
            <li><a href="/users/sign-up"> Sign Up </a></li>
        <% } %>
    </ul>
</header>